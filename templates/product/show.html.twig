{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>



    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>
                    <div id="bloc_price_product_detail">
                        {% include 'product/_product_price.html.twig' with {'product': product} only %}
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    {% if product.productDeclinations|length %}
                        <div id="bloc_attribute_categories" data-product-id="{{ product.id }}"></div>
                    {% endif %}
                </td>
            </tr>
        <tr>
            <td>
{#                <div id="add_to_card_button">{% include "boutique/page-article-panier.html.twig" %}</div>#}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}

    <script>
        let minimalQuantity = {{ product.minimalQuantity }};
    </script>

{% endblock %}
