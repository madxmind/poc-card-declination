{% extends 'base.html.twig' %}

{% block title %}AttributeCategory index{% endblock %}

{% block body %}
    <h1>AttributeCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attribute_category in attribute_categories %}
            <tr>
                <td>{{ attribute_category.id }}</td>
                <td>{{ attribute_category.name }}</td>
                <td>
                    <a href="{{ path('attribute_category_show', {'id': attribute_category.id}) }}">show</a>
                    <a href="{{ path('attribute_category_edit', {'id': attribute_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('attribute_category_new') }}">Create new</a>
{% endblock %}
