{% extends 'base.html.twig' %}

{% block title %}Attribute index{% endblock %}

{% block body %}
    <h1>Attribute index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attribute in attributes %}
            <tr>
                <td>{{ attribute.id }}</td>
                <td>{{ attribute.name }}</td>
                <td>
                    <a href="{{ path('attribute_show', {'id': attribute.id}) }}">show</a>
                    <a href="{{ path('attribute_edit', {'id': attribute.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('attribute_new') }}">Create new</a>
{% endblock %}
